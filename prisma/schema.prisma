generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String? // Si usas OAuth, puede ser null
  createdAt DateTime @default(now())
  cards     LoyaltyCard[]
  designs   CardDesign[]
}

model CardDesign {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  name      String
  imageUrl  String
  createdAt DateTime @default(now())
  cards     LoyaltyCard[]
}

model LoyaltyCard {
  id        String   @id @default(cuid())
  code      String   @unique
  hash      String
  qrUrl     String?
  design    CardDesign @relation(fields: [designId], references: [id])
  designId  String
  user      User      @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime  @default(now())
}
